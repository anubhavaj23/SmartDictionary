<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dictionary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#80223355"
    tools:context="com.anubhav.smartdictionary.DictionaryActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_below="@+id/et_searchtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_meaningtext"
                android:padding="10dp"
                android:background="@drawable/rounded_edittext"
                android:layout_height="match_parent" />
        </ScrollView>

    </LinearLayout>


    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_searchtext"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_edittext"
        android:imeOptions="actionSearch"
        android:hint="Type here..."
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/scrollView2" />

</RelativeLayout>
